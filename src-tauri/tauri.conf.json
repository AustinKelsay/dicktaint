{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dicktaint",
  "version": "0.1.0",
  "identifier": "com.plebdev.dicktaint",
  "build": {
    "beforeDevCommand": "HOST=${HOST:-127.0.0.1} PORT=43210 bun run start",
    "devUrl": "http://localhost:43210",
    "frontendDist": "../public"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "dicktaint",
        "width": 1000,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "externalBin": [
      "binaries/whisper-cli"
    ],
    "macOS": {
      "infoPlist": "Info.plist"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
