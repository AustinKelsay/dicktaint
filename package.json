{
  "name": "dicktaint",
  "version": "0.1.0",
  "private": true,
  "description": "Local dictation app with native Whisper CLI transcription and local model management",
  "scripts": {
    "start": "bun run server.js",
    "dev": "bun --watch server.js",
    "test": "bun test",
    "whisper:sidecar": "./scripts/build-whisper-sidecar.sh",
    "whisper:smoke": "./scripts/smoke-whisper-sidecar.sh",
    "test:rust": "cargo test --manifest-path src-tauri/Cargo.toml",
    "test:all": "bun run test && bun run test:rust",
    "tauri:dev": "bunx @tauri-apps/cli dev",
    "tauri:build": "bunx @tauri-apps/cli build",
    "tauri:ios:init": "bunx @tauri-apps/cli ios init --ci",
    "tauri:ios:dev": "HOST=0.0.0.0 PORT=43210 bunx @tauri-apps/cli ios dev",
    "tauri:ios:run": "bunx @tauri-apps/cli ios run",
    "tauri:ios:build": "bunx @tauri-apps/cli ios build"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0"
  }
}
